<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/marginid">

        <ImageView
            android:id="@+id/iv_item_user"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/margin_login"
            android:layout_height="@dimen/margin_login" />

        <TextView
            android:id="@+id/tv_namedisplay"
            android:textSize="@dimen/textsizel"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_item_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cường hoàng"/>

        <TextView
            android:id="@+id/tv_mail_user"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_toRightOf="@id/iv_item_user"
            android:layout_below="@id/tv_namedisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="member"/>

        <ImageView
            android:id="@+id/iv_more_user"
            android:layout_margin="@dimen/fab_margin"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>