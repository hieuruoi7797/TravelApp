<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sonng266.travelapp.fragments.account.CreateIDFragment">

    <!-- TODO: Update blank fragment layout -->
    <include
        android:id="@+id/icl"
        layout="@layout/logo"></include>


    <TextView
        android:layout_marginTop="@dimen/margin_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/icl"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/textsizel"
        android:text="ID chuyến đi của bạn là"
        android:layout_height="wrap_content"
        android:id="@+id/textView_title" />

    <TextView
        android:layout_margin="@dimen/fab_margin"
        android:id="@+id/tv_id_create"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="50sp"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="@dimen/fab_margin"
        android:id="@+id/til_name_trip"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_below="@id/tv_id_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true">
        <EditText
            android:id="@+id/edt_name_create_trip"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên chuyến đi"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>




    <TextView
        android:layout_below="@id/til_name_trip"
        android:id="@+id/tv_continue_create_id"
        android:textStyle="bold"
        android:textColor="@color/textolor"
        android:layout_marginTop="@dimen/margin_login"
        android:textSize="@dimen/textsizel"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@color/colorbackgrond"
        android:text="Tiếp tục"
        android:layout_width="@dimen/width_login"
        android:layout_height="@dimen/height_login" />


</RelativeLayout>
