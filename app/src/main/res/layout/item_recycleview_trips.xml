<?xml version="1.0" encoding="utf-8"?>

<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mtl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleColor="#585858"
    app:mrl_rippleRoundedCorners="5dp"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/marginid">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/margin_login"
            android:layout_height="@dimen/margin_login" />

        <TextView
            android:id="@+id/tv_creator"
            android:textSize="@dimen/textsizel"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cường hoàng"/>

        <TextView
            android:id="@+id/tv_name_trip"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_toRightOf="@id/iv_item"
            android:layout_below="@id/tv_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hanoi namdinh"/>

        <TextView
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_toRightOf="@id/iv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id: 123113213131"
            android:textSize="12sp"
            android:id="@+id/tv_id_trip"
            android:textStyle="italic"
            android:layout_below="@id/tv_name_trip"/>

    </RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout>
