<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#e8475a71"
                android:startColor="#e8475a71"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#e8475a71"
                android:startColor="#e8475a71"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#475a71"
                android:startColor="#475a71"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>